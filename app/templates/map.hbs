<style type="text/css">
body {
  font-family:'Proxima Nova', 'Helvetica Neue';
}

#map {
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:300px;
}

#list {
  position:absolute;
  width:300px;
  overflow:scroll;
  top:0;
  bottom:0;
  right:0;
}

.event {
  background:#eee;
  border-top:1px solid #ddd;
  border-bottom:1px solid #fff;
  padding:20px;
}

.event .btn {
  background:#019875;
  color:#fff;
  font-size:14px;
  text-decoration:none;
  padding:5px 10px;
  border:0;
}

.event h2 {
  font-size:20px;
  margin:0;
  padding-bottom:10px;
  border-bottom:1px solid #ddd;
}

.event p {
  font-size:14px;
}
</style>

<div id="map"></div>

<div id='list'>
  {{#each controller.content}}
    <div class='event'>
      <h2>{{this.title}}</h2>
      <p>
        {{this.address}}
      </p>

      <button class='btn' {{action "showEvent" this.id on="click"}}>See on map</a>
    </div> 
  {{/each}}
</div>
